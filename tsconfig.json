{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "incremental": true,
    "module": "es6",
    "sourceMap": true,
    "strict": true,
    "jsx": "react-jsx",
    "lib": ["dom", "es6", "es2022.error"],
    "target": "es6",
    "allowJs": true,
    "paths": {
      "@utils*": ["./src/utils*", "./src/utils"],
    }
  },
  "include": ["./src/", "global.d.ts"],
  "exclude": ["node_modules"]
}
